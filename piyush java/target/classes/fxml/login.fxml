<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0;" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanagement.controller.LoginController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label style="-fx-text-fill: #2c3e50;" text="Event Management System">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <GridPane alignment="CENTER" hgap="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" vgap="10.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" prefWidth="200.0" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" onAction="#handleLogin" prefWidth="200.0" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
      <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #e8f4fd; -fx-background-radius: 5; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-weight: bold;" text="Demo Credentials:" />
            <Label text="Admin: admin / admin123" />
            <Label text="Organizer: organizer1 / org123" />
            <Label text="Attendee: attendee1 / att123" />
         </children>
      </VBox>
   </children>
</VBox>