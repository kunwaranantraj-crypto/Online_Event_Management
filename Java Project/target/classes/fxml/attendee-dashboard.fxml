<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanagement.controller.AttendeeController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #9b59b6;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Attendee Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" style="-fx-text-fill: white;" text="Welcome, Attendee" />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
         </children>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Dashboard">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <VBox spacing="20.0">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <HBox fx:id="statsCards" spacing="20.0" />
                              <VBox spacing="10.0">
                                 <children>
                                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Quick Actions" />
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button fx:id="browseEventsButton" prefWidth="150.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Browse Events" />
                                          <Button fx:id="viewRegistrationsButton" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="My Registrations" />
                                          <Button fx:id="viewMessagesButton" prefWidth="150.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Messages" />
                                          <Button fx:id="updateProfileButton" prefWidth="150.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="Update Profile" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="My Upcoming Events" />
                              <ListView fx:id="upcomingEventsList" prefHeight="200.0" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </content>
          </Tab>
          <Tab text="Browse Events">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Search:" />
                              <TextField fx:id="searchField" prefWidth="300.0" promptText="Search events..." />
                              <Button onAction="#searchEvents" text="Search" />
                              <Button onAction="#refreshAvailableEvents" text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="availableEventsTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="titleCol" prefWidth="200.0" text="Title" />
                            <TableColumn fx:id="dateCol" prefWidth="100.0" text="Date" />
                              <TableColumn fx:id="timeCol" prefWidth="80.0" text="Time" />
                              <TableColumn fx:id="venueCol" prefWidth="150.0" text="Venue" />
                              <TableColumn fx:id="descriptionCol" prefWidth="250.0" text="Description" />
                          </columns>
                        </TableView>
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#showRegistrationDialog" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Register for Event" />
                              <Button onAction="#showEventDetails" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="View Details" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
          </Tab>
            <Tab text="My Registrations">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#refreshRegistrations" text="Refresh" />
                              <Button onAction="#cancelSelectedRegistration" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel Registration" />
                           </children>
                        </HBox>
                        <TableView fx:id="registrationTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="eventCol" prefWidth="200.0" text="Event" />
                            <TableColumn fx:id="regDateCol" prefWidth="150.0" text="Registration Date" />
                              <TableColumn fx:id="statusCol" prefWidth="120.0" text="Payment Status" />
                              <TableColumn fx:id="amountCol" prefWidth="100.0" text="Amount" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Messages">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#refreshMessages" text="Refresh Messages" />
                              <Button text="Mark as Read" />
                           </children>
                        </HBox>
                        <ListView fx:id="messagesList" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Profile">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Profile Information" />
                        <GridPane hgap="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" vgap="15.0">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="nameField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="emailField" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label fx:id="usernameLabel" style="-fx-font-weight: bold;" text="Username: " GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                              <Button onAction="#updateProfile" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update Profile" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>