<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eventmanagement.controller.OrganizerController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #27ae60;">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Organizer Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" style="-fx-text-fill: white;" text="Welcome, Organizer" />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
         </children>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Dashboard">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <VBox spacing="20.0">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <HBox fx:id="statsCards" spacing="20.0" />
                              <LineChart fx:id="salesChart" prefHeight="300.0" title="Ticket Sales Over Time">
                                <xAxis>
                                  <CategoryAxis side="BOTTOM" />
                                </xAxis>
                                <yAxis>
                                  <NumberAxis side="LEFT" />
                                </yAxis>
                              </LineChart>
                              <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Upcoming Events" />
                              <ListView fx:id="upcomingEventsList" prefHeight="200.0" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </content>
          </Tab>
          <Tab text="Event Management">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#showCreateEventDialog" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Create Event" />
                              <Button onAction="#showEditEventDialog" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Edit Event" />
                              <Button onAction="#deleteSelectedEvent" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete Event" />
                              <Button onAction="#refreshEventTable" text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="titleCol" prefWidth="200.0" text="Title" />
                            <TableColumn fx:id="dateCol" prefWidth="100.0" text="Date" />
                              <TableColumn fx:id="timeCol" prefWidth="80.0" text="Time" />
                              <TableColumn fx:id="venueCol" prefWidth="150.0" text="Venue" />
                              <TableColumn fx:id="statusCol" prefWidth="100.0" text="Status" />
                              <TableColumn fx:id="maxAttendeesCol" prefWidth="120.0" text="Max Attendees" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
          </Tab>
            <Tab text="Ticket Management">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Select Event:" />
                              <ComboBox fx:id="eventComboBox" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#showAddTicketDialog" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Add Ticket Type" />
                              <Button onAction="#showEditTicketDialog" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Edit Ticket" />
                              <Button onAction="#deleteSelectedTicket" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete Ticket" />
                              <Button onAction="#refreshTicketTable" text="Refresh" />
                           </children>
                        </HBox>
                        <TableView fx:id="ticketTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="typeCol" prefWidth="150.0" text="Ticket Type" />
                            <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price" />
                              <TableColumn fx:id="availableCol" prefWidth="100.0" text="Available" />
                              <TableColumn fx:id="soldCol" prefWidth="100.0" text="Sold" />
                              <TableColumn fx:id="remainingCol" prefWidth="100.0" text="Remaining" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Communication">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Select Event:" />
                              <ComboBox fx:id="messageEventComboBox" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <VBox spacing="10.0">
                           <children>
                              <Label text="Message Title:" />
                              <TextField fx:id="titleField" promptText="Enter message title" />
                              <Label text="Message Content:" />
                              <TextArea fx:id="messageArea" prefRowCount="8" promptText="Enter your message to attendees..." />
                              <Button onAction="#sendMessage" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Send Message" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>